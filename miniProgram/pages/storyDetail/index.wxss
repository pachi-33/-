/* pages/storyDetail/index.wxss */
.scroll-view {
  width: 100%;
  height: 80%;
}
.back {
  display: flex;
  flex-direction: row;
  margin-left: 10px;
}

.back image {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}

.swiper-container image{
    width: 90%;
    height: auto;
    margin-left: 5%;
}

.content{
  margin:10px 10px;
}

.author-profile{
  font-size: 17px;
}
.author-profile{
  display: flex;
  justify-content: center;
  margin: 10px 20px;
}
.author-profile .left{
  width: 50%;
  display: flex;
}
.author-profile .left image{
  width: 30px; 
  height: 30px; 
  border-radius: 50%; 
  margin-right: 10px; 
}
.author-profile .right{
  display: flex;
  width: 50%;
}
.author-profile image{
  width: 25px;
  height: 25px;
}
.story-profile{
  display: flex;
  margin: 5px 20px;
}
.story-profile view{
  width: 33%;
  display: flex;
  flex-direction:column;
  align-items: center;
}
.story-profile image{
  width: 25px;
  height: 25px;
}
.title{
  font-size: 22px;
  font-weight: bold;
}

.bottom-commentbox{
  border: 1px solid black;
  height: 70px;
}

.content-bottom{
  font-size: 12px;
  color: #999; 
  margin:10px 0;

}

.comment {
  width: 100%;
}


.comment-total{
  margin-left: 10px;
  margin-top: 20px;
  font-size: 15px;
  font-weight: bold;
}

.comment-list-box {
  padding: 10px;
  border-bottom: 1px solid #ddd;
}

.comment-author {
  display: flex;
  align-items: left; 
}

.comment-author image {
  width: 30px; 
  height: 30px; 
  border-radius: 50%; 
  margin-right: 10px; 
}
.comment-username {
  font-weight: bold;
}

.comment-content {
  margin-top: 5px; 
}

.comment-time {
  color: #666;
  font-size: 12px;
}

.no-data {
  padding: 10px; 
  text-align: center; 
  color: #999; 
}

.comment-box {
  border: rgb(228, 226, 226) solid 1px;
  border-radius: 20px;
  margin: 0 10px;
  line-height: 30px;
  height: 30px;
}

.comment-box input {
  padding: 0 10px;
  line-height: 30px;
  height: 30px;
}

