/* pages/login/index.wxss */
.main-container {
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 80vh;
}

.back {
  display: flex;
  flex-direction: row;
  margin-left: 10px;
}

.back image {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}

.title {
  font-size: 36px;
  font-weight: bold;
  margin-bottom: 20px;
}

.slogan {
  font-size: 24px;
  color: #666;
  margin-bottom: 40%;
}

.tips {
  font-size: 14px;
  color: #999;
  margin-bottom: 20px;
}

button {
  font-size: 16px;
  padding: 10px 20px;
  background-color: #39c5bb;
  color: #fff;
  border: none;
  border-radius: 4px;
}
